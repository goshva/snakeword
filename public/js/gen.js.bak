	else return variable
}
function getNear(i){
	var neaArr = [];
	neaArr[0] = ifexits(letters[i-edge]);
	neaArr[1] = ifexits(letters[i+1]);
	neaArr[2] = ifexits(letters[i+edge]);
	neaArr[3] = ifexits(letters[i-1]);
	if((i+1)%edge==0){ neaArr[1] = null}
	if (i%edge==0)   { neaArr[3] = null}
	return(neaArr);
}
